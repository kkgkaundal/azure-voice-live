{
  "name": "azure-voice-live",
  "version": "3.0.0",
  "description": "A library for Microsoft Azure Voice Live API with support for models, agents, characters, and voices. Uses Azure Speech SDK for audio handling.",
  "type": "module",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "browser": "dist/browser/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "browser": "./dist/browser/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./node": {
      "import": "./dist/esm/adapters/node.js",
      "require": "./dist/cjs/adapters/node.js",
      "types": "./dist/types/adapters/node.d.ts"
    },
    "./browser": {
      "import": "./dist/esm/adapters/browser.js",
      "require": "./dist/cjs/adapters/browser.js",
      "types": "./dist/types/adapters/browser.d.ts"
    },
    "./react": {
      "import": "./dist/react/react/react.js",
      "require": "./dist/react/react/react.js",
      "types": "./dist/react/react/react.d.ts"
    },
    "./components": {
      "import": "./dist/react/react/components/index.js",
      "require": "./dist/react/react/components/index.js",
      "types": "./dist/react/react/components/index.d.ts"
    },
    "./styles": "./dist/css/azure-voice-live.css",
    "./styles/dev": "./dist/css/azure-voice-live.dev.css"
  },
  "scripts": {
    "build": "npm run clean && npm run build:css && npm run build:types && npm run build:cjs && npm run build:esm && npm run build:browser && npm run build:standalone && npm run build:react",
    "build:types": "tsc --project tsconfig.types.json",
    "build:cjs": "tsc --project tsconfig.cjs.json",
    "build:esm": "tsc --project tsconfig.esm.json",
    "build:browser": "webpack --config webpack.config.cjs",
    "build:standalone": "webpack --config webpack.standalone.config.cjs",
    "build:react": "node scripts/build-react.mjs",
    "build:css": "node scripts/build-css.mjs",
    "clean": "rimraf dist",
    "test": "jest --config jest.config.cjs",
    "test:watch": "jest --config jest.config.cjs --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "prepare": "npm run build",
    "dev": "npm run dev:all",
    "dev:all": "concurrently \"npm run dev:types\" \"npm run dev:react\" \"npm run dev:css\" \"npm run dev:examples\"",
    "dev:types": "tsc --project tsconfig.types.json --watch",
    "dev:react": "tsc --project tsconfig.react.json --watch",
    "dev:css": "npx tailwindcss -i src/react/styles/tailwind.css -o dist/css/azure-voice-live.dev.css --watch",
    "dev:build": "nodemon --watch src --ext ts,tsx,css --exec \"npm run build:quick\"",
    "build:quick": "npm run build:types && npm run build:react && npm run build:css",
    "example:nextjs": "cd examples/nextjs-dev && npm run dev",
    "example:react": "cd examples/react-dev && npm start",
    "test:dev": "npm run build:quick && npm run test:components",
    "dev:full": "concurrently \"npm run dev\" \"npm run dev:examples\"",
    "dev:examples": "cd examples/nextjs-dev && npm run dev"
  },
  "keywords": [
    "azure",
    "voice",
    "live",
    "api",
    "sdk",
    "typescript",
    "react",
    "nextjs",
    "browser",
    "nodejs",
    "audio",
    "realtime",
    "websocket"
  ],
  "author": "K. K.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kkgkaundal/azure-voice-live.git"
  },
  "bugs": {
    "url": "https://github.com/kkgkaundal/azure-voice-live/issues"
  },
  "homepage": "https://github.com/kkgkaundal/azure-voice-live#readme",
  "devDependencies": {
    "@azure/identity": "^4.0.1",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@types/events": "^3.0.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.18.0",
    "@types/react": "^18.2.25",
    "@types/react-dom": "^18.2.11",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "autoprefixer": "^10.4.21",
    "chokidar": "^4.0.3",
    "concurrently": "^9.2.1",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "live-server": "^1.2.2",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.5",
    "rollup": "^4.49.0",
    "rollup-plugin-typescript2": "^0.36.0",
    "tailwindcss": "^4.1.12",
    "ts-jest": "^29.4.1",
    "ts-loader": "^9.4.4",
    "typescript": "^5.9.2",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  },
  "peerDependenciesMeta": {
    "@azure/identity": {
      "optional": true
    },
    "react": {
      "optional": true
    },
    "ws": {
      "optional": true
    },
    "react-dom": {
      "optional": false
    }
  },
  "dependencies": {
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/three": "^0.179.0",
    "eventemitter3": "^5.0.1",
    "events": "^3.3.0",
    "fs": "^0.0.1-security",
    "isomorphic-ws": "^5.0.0",
    "rollup-plugin-polyfill-node": "^0.13.0",
    "vite": "^7.1.3",
    "vite-plugin-dts": "^4.5.4",
    "ws": "^8.18.3"
  },
  "peerDependencies": {
    "@azure/identity": "^4.0.0",
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "optionalDependencies": {
    "mic": "^2.1.2",
    "speaker": "^0.5.4"
  }
}
