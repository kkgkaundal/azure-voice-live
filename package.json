{
  "name": "azure-voice-live",
  "version": "1.0.3",
  "description": "A library for Microsoft Azure Voice Live API with support for models, agents, characters, and voices. Uses Azure Speech SDK for audio handling.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "tsc && rollup -c",
    "test": "jest",
    "prepublishOnly": "npm run build",
    "clean": "rm -rf dist",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\""
  },
  "keywords": [
    "azure",
    "voice",
    "realtime",
    "api",
    "speech",
    "avatar",
    "cognitiveservices"
  ],
  "author": "K. K.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kkgkaundal/azure-voice-live.git"
  },
  "devDependencies": {
    "@types/events": "^3.0.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.18.0",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "rollup": "^4.49.0",
    "rollup-plugin-typescript2": "^0.36.0",
    "ts-jest": "^29.4.1",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/three": "^0.179.0",
    "events": "^3.3.0",
    "isomorphic-ws": "^5.0.0",
    "rollup-plugin-polyfill-node": "^0.13.0",
    "vite": "^7.1.3",
    "vite-plugin-dts": "^4.5.4",
    "ws": "^8.18.3"
  },
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  }
}
