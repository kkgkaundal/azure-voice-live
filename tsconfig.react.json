{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "es2018",
    "lib": ["dom", "dom.iterable", "es6"],
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist/react",
    "rootDir": "./src",
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/react/**/*",
    "src/types/**/*",
    "src/core/**/*",
    "src/adapters/browser/**/*"
  ],
  "exclude": [
    "src/node/**/*",
    "src/adapters/node/**/*",
    "**/*.test.ts",
    "**/*.test.tsx",
    "node_modules",
    "dist"
  ]
}